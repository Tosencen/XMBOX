<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Design 3 搜索筛选弹窗样式 -->
    <style name="Widget.App.Dialog.M3" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@drawable/bg_dialog_m3</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogFadeAnimation</item>
        <item name="android:windowElevation">0dp</item>
    </style>

    <!-- Material Design 3 弹窗文本样式 - 日间模式 -->
    <style name="Widget.App.Dialog.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- Material Design 3 弹窗标题样式 - 日间模式 -->
    <style name="Widget.App.Dialog.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>
</resources>
