<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 无紫色的Material Design 3 SwitchMaterial样式 -->
    <style name="Widget.App.SwitchMaterial.M3.NoPurple" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <!-- 使用无紫色的轨道背景 -->
        <item name="track">@drawable/switch_track_m3_no_purple</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- 不设置minWidth和minHeight，让系统自动处理 -->
        <!-- 不设置thumbOffset，让系统自动处理 -->
        <!-- 不设置thumbTint，让系统自动处理 -->
        <!-- 不设置trackTint，使用drawable中定义的颜色 -->
        <item name="trackTint">@null</item>
    </style>
</resources>
