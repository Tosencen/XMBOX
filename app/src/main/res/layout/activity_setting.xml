<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:title="设置"
        app:titleStyle="bold"
        android:background="?attr/colorSurface"
        app:leftIcon="@drawable/ic_arrow_back_m3"
        app:titleColor="?attr/colorOnSurface"
        app:rightTitleColor="?attr/colorOnSurface"
        app:leftTitleColor="?attr/colorOnSurface"
        app:lineVisible="false"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_settings_card_md3"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/llHomeRec"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主页内容"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvHomeRec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/ic_chevron_right_m3"
                        app:tint="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/showFastSearch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="聚合模式"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/showFastSearchText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/ic_chevron_right_m3"
                        app:tint="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTheme"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主题颜色"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/ic_chevron_right_m3"
                        app:tint="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llPrivateBrowsing"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无痕浏览"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchPrivateBrowsing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        style="@style/Widget.App.Switch.BrightCyan"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_settings_card_md3">
                <LinearLayout
                    android:id="@+id/llPlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="播放器"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvPlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:alpha="0.75"
                            android:src="@drawable/ic_chevron_right_m3"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="选择不同的视频解码器，推荐使用Exo播放器，兼容性最佳"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llVideoPurify"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="广告过滤"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchVideoPurify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        style="@style/Widget.App.Switch.Capsule"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPressSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="长按倍速"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/ic_chevron_right_m3"
                        app:tint="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBackgroundPlay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="后台播放"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvBackgroundPlayType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/ic_chevron_right_m3"
                        app:tint="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMediaCodec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IJK解码方式"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvMediaCodec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:alpha="0.75"
                            android:src="@drawable/ic_chevron_right_m3"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="选择视频解码方式，硬解码性能更好但兼容性较差，软解码兼容性好但更耗性能"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"/>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llRender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="渲染方式"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvRenderType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:alpha="0.75"
                            android:src="@drawable/ic_chevron_right_m3"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="TextureView支持动画效果但性能较差，SurfaceView性能更好但不支持部分特效"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llScale"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="画面缩放"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvScaleType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/ic_chevron_right_m3"
                        app:tint="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llIjkCachePlay"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IJK缓存"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchIjkCachePlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        style="@style/Widget.App.Switch.Capsule"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_settings_card_md3">

                <LinearLayout
                    android:id="@+id/llBackup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数据备份还原"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/ic_chevron_right_m3"
                        app:tint="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llDns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="安全DNS"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvDns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:alpha="0.75"
                            android:src="@drawable/ic_chevron_right_m3"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="推荐选择阿里DNS，国内访问速度最快，可避免DNS劫持和网络污染"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llHistoryNum"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="历史记录"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvHistoryNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/ic_chevron_right_m3"
                        app:tint="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp">

                    <TextView
                        android:id="@+id/tvCacheSizeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="缓存大小"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearCache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清空缓存"
                        android:textSize="14sp"
                        app:cornerRadius="8dp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>