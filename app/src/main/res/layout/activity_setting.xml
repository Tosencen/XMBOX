<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:title="XMBOX"
        app:titleStyle="bold"
        android:background="?attr/colorSurface"
        app:titleColor="?attr/colorOnSurface"
        app:rightTitleColor="?attr/colorOnSurface"
        app:leftTitleColor="?attr/colorOnSurface"
        app:leftIcon="@null"
        app:lineVisible="false"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_settings_card_md3"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/llHomeRec"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                    <TextView
                        android:id="@+id/icon_home"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="&#xe88a;"
                        android:fontFamily="@font/material_symbols_rounded"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="主页内容"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvHomeRec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:text="@string/ms_arrow_forward"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="24sp"
                        style="@style/Widget.App.MaterialSymbols"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/showFastSearch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="聚合模式"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/showFastSearchText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:text="@string/ms_arrow_forward"
                        style="@style/Widget.App.MaterialSymbols.Setting.Arrow"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTheme"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                    <TextView
                        android:id="@+id/icon_palette"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="@string/ms_palette"
                        android:fontFamily="@font/material_symbols_rounded"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        style="@style/Widget.App.MaterialSymbols"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="主题颜色"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:text="@string/ms_arrow_forward"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="24sp"
                        style="@style/Widget.App.MaterialSymbols"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llPrivateBrowsing"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                    <TextView
                        android:id="@+id/icon_visibility"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="@string/ms_visibility"
                        android:fontFamily="@font/material_symbols_rounded"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        style="@style/Widget.App.MaterialSymbols"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无痕浏览"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchPrivateBrowsing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        style="@style/Widget.App.SwitchMaterial.M3.NoPurple"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_settings_card_md3">


                <LinearLayout
                    android:id="@+id/llPlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                        <TextView
                            android:id="@+id/icon_play"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center"
                            android:text="@string/ms_play_circle"
                            android:fontFamily="@font/material_symbols_rounded"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="24sp"
                            style="@style/Widget.App.MaterialSymbols"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="播放器"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvPlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:text="@string/ms_arrow_forward"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="24sp"
                            style="@style/Widget.App.MaterialSymbols"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="40dp"
                        android:text="选择不同的视频解码器，推荐使用Exo播放器，兼容性最佳"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llVideoPurify"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                    <TextView
                        android:id="@+id/icon_block"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="@string/ms_block"
                        android:fontFamily="@font/material_symbols_rounded"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        style="@style/Widget.App.MaterialSymbols"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="广告过滤"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchVideoPurify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        style="@style/Widget.App.SwitchMaterial.M3.NoPurple"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPressSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                    <TextView
                        android:id="@+id/icon_speed"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="@string/ms_speed"
                        android:fontFamily="@font/material_symbols_rounded"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        style="@style/Widget.App.MaterialSymbols"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="长按倍速"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:text="@string/ms_arrow_forward"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="24sp"
                        style="@style/Widget.App.MaterialSymbols"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBackgroundPlay"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                    <TextView
                        android:id="@+id/icon_pip"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="@string/ms_picture_in_picture"
                        android:fontFamily="@font/material_symbols_rounded"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        style="@style/Widget.App.MaterialSymbols"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="后台播放"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvBackgroundPlayType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:text="@string/ms_arrow_forward"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="24sp"
                        style="@style/Widget.App.MaterialSymbols"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMediaCodec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                        <TextView
                            android:id="@+id/icon_codec"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center"
                            android:text="@string/ms_settings"
                            android:fontFamily="@font/material_symbols_rounded"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="24sp"
                            style="@style/Widget.App.MaterialSymbols"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="IJK解码方式"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvMediaCodec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:text="@string/ms_arrow_forward"
                            style="@style/Widget.App.MaterialSymbols.Setting.Arrow"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="40dp"
                        android:text="选择视频解码方式，硬解码性能更好但兼容性较差，软解码兼容性好但更耗性能"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"/>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llRender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                        <TextView
                            android:id="@+id/icon_render"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center"
                            android:text="@string/ms_cast"
                            android:fontFamily="@font/material_symbols_rounded"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="24sp"
                            style="@style/Widget.App.MaterialSymbols"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="渲染方式"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvRenderType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:text="@string/ms_arrow_forward"
                            style="@style/Widget.App.MaterialSymbols.Setting.Arrow"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="40dp"
                        android:text="TextureView支持动画效果但性能较差，SurfaceView性能更好但不支持部分特效"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llScale"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                    <TextView
                        android:id="@+id/icon_scale"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="@string/ms_fullscreen"
                        android:fontFamily="@font/material_symbols_rounded"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        style="@style/Widget.App.MaterialSymbols"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="画面缩放"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvScaleType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:text="@string/ms_arrow_forward"
                        style="@style/Widget.App.MaterialSymbols.Setting.Arrow"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llIjkCachePlay"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                    <TextView
                        android:id="@+id/icon_cache"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="@string/ms_cloud_download"
                        android:fontFamily="@font/material_symbols_rounded"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        style="@style/Widget.App.MaterialSymbols"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IJK缓存"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchIjkCachePlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        style="@style/Widget.App.SwitchMaterial.M3.NoPurple"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_settings_card_md3">

                <LinearLayout
                    android:id="@+id/llBackup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                    <TextView
                        android:id="@+id/icon_backup"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="@string/ms_settings_backup_restore"
                        android:fontFamily="@font/material_symbols_rounded"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        style="@style/Widget.App.MaterialSymbols"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="数据备份还原"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:text="@string/ms_arrow_forward"
                        style="@style/Widget.App.MaterialSymbols.Setting.Arrow"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llDns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                        <TextView
                            android:id="@+id/icon_dns"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center"
                            android:text="@string/ms_dns"
                            android:fontFamily="@font/material_symbols_rounded"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="24sp"
                            style="@style/Widget.App.MaterialSymbols"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="安全DNS"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvDns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:text="@string/ms_arrow_forward"
                            style="@style/Widget.App.MaterialSymbols.Setting.Arrow"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="40dp"
                        android:text="推荐选择阿里DNS，国内访问速度最快，可避免DNS劫持和网络污染"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llHistoryNum"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:foreground="?android:selectableItemBackground">

                    <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                    <TextView
                        android:id="@+id/icon_history"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="@string/ms_history"
                        android:fontFamily="@font/material_symbols_rounded"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        style="@style/Widget.App.MaterialSymbols"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="历史记录"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvHistoryNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:text="@string/ms_arrow_forward"
                        style="@style/Widget.App.MaterialSymbols.Setting.Arrow"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llCacheSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- 左侧图标 - 使用TextView和Material Symbols字体 -->
                        <TextView
                            android:id="@+id/icon_cache_size"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center"
                            android:text="@string/ms_delete"
                            android:fontFamily="@font/material_symbols_rounded"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="24sp"
                            style="@style/Widget.App.MaterialSymbols"/>

                        <TextView
                            android:id="@+id/tvCacheSizeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="缓存大小"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:singleLine="true"/>

                        <TextView
                            android:id="@+id/tvCacheSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearCache"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="清空缓存"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            app:cornerRadius="8dp"
                            app:elevation="2dp"
                            style="@style/Widget.Material3.Button" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>